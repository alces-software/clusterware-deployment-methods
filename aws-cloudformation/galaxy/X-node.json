{
    "Description": "Launch an Alces Galaxy research compute environment, configured with Galaxy webapp and Pulsar compute service in a single node",
    "Parameters": {
        "ClusterName": {
            "Description": "Choose a cluster name",
            "Type": "String",
            "AllowedPattern": "[a-z0-9]*",
            "Default": "awscluster"
        },
        "KeyPair": {
            "Description": "Choose an existing AWS key for administrator access",
            "Type": "AWS::EC2::KeyPair::KeyName"
        },
        "InstanceFlavour": {
            "Description": "Select the Galaxy instance flavour",
            "Type": "String",
            "Default": "small",
            "AllowedValues": [
                "small",
                "large"
            ]
        },
        "ComputeNumber": {
            "Description": "Enter the number of compute nodes you wish to deploy",
            "Type": "String",
            "AllowedPattern": "[0-9]",
            "Default": "3"
        },
        "NetworkCIDR": {
            "Description": "Enter an address range that is permitted to access the Clusterware master node. Leave blank if unknown",
            "Type": "String",
            "Default": "0.0.0.0/0",
            "AllowedPattern": "[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}/[0-9]{1,2}",
            "ConstraintDescription": "Please specify a valid IP range, e.g. 101.21.2.0/16"
        }
    },
    "Mappings": {
        "InstanceType2Flavour": {
            "small": {
                "instanceflavour": "t2.small"
            },
            "large": {
                "instanceflavour": "t2.large"
           }
        },
        "AWSRegionArch2AMI": {
            "eu-west-1": {
                "centos7": "ami-19a4106a"
            }
        }
    },
    "Resources": {
        "ClusterwareVPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": { "Ref": "ClusterName" }
                    }
                ],
                "CidrBlock": "10.75.0.0/16",
                "EnableDnsSupport": "true",
                "EnableDnsHostnames": "true"
            }
        },
        "ClusterwarePublicNet": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {
                    "Ref": "ClusterwareVPC"
                },
                "CidrBlock": "10.75.0.0/24"
            }
        },
        "ClusterwareGateway": {
            "Type": "AWS::EC2::InternetGateway",
            "DependsOn": "ClusterwareVPC"
        },
        "ClusterwareAttachGW": {
            "Type": "AWS::EC2::VPCGatewayAttachment",
            "DependsOn": "ClusterwareVPC",
            "Properties": {
                "VpcId": {
                    "Ref": "ClusterwareVPC"
                },
                "InternetGatewayId": {
                    "Ref": "ClusterwareGateway"
                }
            }
        },
        "ClusterwareRouteTable": {
            "Type": "AWS::EC2::RouteTable",
            "DependsOn": "ClusterwareVPC",
            "Properties": {
                "VpcId": {
                    "Ref": "ClusterwareVPC"
                }
            }
        },
        "ClusterwareRoute": {
            "Type": "AWS::EC2::Route",
            "DependsOn": "ClusterwareAttachGW",
            "Properties": {
                "RouteTableId": {
                    "Ref": "ClusterwareRouteTable"
                },
                "DestinationCidrBlock": "0.0.0.0/0",
                "GatewayId": {
                    "Ref": "ClusterwareGateway"
                }
            }
        },
        "ClusterwareNetACL": {
            "Type": "AWS::EC2::NetworkAcl",
            "Properties": {
                "VpcId": {
                    "Ref": "ClusterwareVPC"
                }
            }
        },
        "InboundSSHACLEntry": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "ClusterwareNetACL"
                },
                "RuleNumber": "100",
                "Protocol": "-1",
                "RuleAction": "allow",
                "Egress": "false",
                "CidrBlock": {
                    "Ref": "NetworkCIDR"
                },
                "PortRange": {
                    "From": "1",
                    "To": "65535"
                }
            }
        },
        "OutboundACLEntry": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "ClusterwareNetACL"
                },
                "RuleNumber": "101",
                "Protocol": "-1",
                "RuleAction": "allow",
                "Egress": "true",
                "CidrBlock": "0.0.0.0/0",
                "PortRange": {
                    "From": "1",
                    "To": "65535"
                }
            }
        },
        "ClusterwareSubnetLink": {
            "Type": "AWS::EC2::SubnetNetworkAclAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "ClusterwarePublicNet"
                },
                "NetworkAclId": {
                    "Ref": "ClusterwareNetACL"
                }
            }
        },
        "SubnetToRouteTable": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "RouteTableId": {
                    "Ref": "ClusterwareRouteTable"
                },
                "SubnetId": {
                    "Ref": "ClusterwarePublicNet"
                }
            }
        },
        "AlcesClusterwareSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": { "Ref": "ClusterName" }
                    }
                ],
                "GroupDescription": "Enable SSH access to the Alces Clusterware master node",
                "VpcId": {
                    "Ref": "ClusterwareVPC"
                },
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "22",
                        "ToPort": "22",
                        "CidrIp": {
                            "Ref": "NetworkCIDR"
                        }
                    },
                    {
                        "IpProtocol": "-1",
                        "FromPort": "0",
                        "ToPort": "65535",
                        "CidrIp": {
                            "Ref": "NetworkCIDR"
                        }
                    }
                ],
                "SecurityGroupEgress": [
                    {
                        "IpProtocol": "-1",
                        "FromPort": "0",
                        "ToPort": "65535",
                        "CidrIp": "0.0.0.0/0"
                    }
                ]
            }
        },
        "GalaxyInstance": {
            "Type": "AWS::EC2::Instance",
            "DependsOn": "ClusterwareAttachGW",
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Galaxy Instance"
                    }
                ],
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSRegionArch2AMI",
                        { "Ref": "AWS::Region" },
                        "centos7"
                    ]
                },
                "NetworkInterfaces": [
                    {
                        "AssociatePublicIpAddress": "True",
                        "DeviceIndex": "0",
                        "GroupSet": [
                            {
                                "Ref": "AlcesClusterwareSecurityGroup"
                            }
                        ],
                        "SubnetId": {
                            "Ref": "ClusterwarePublicNet"
                        }
                    }
                ],
                "InstanceType": {
                    "Fn::FindInMap": [
                        "InstanceType2Flavour",
                        { "Ref": "InstanceFlavour" },
                        "instanceflavour"
                    ]
                },
                "KeyName": {
                    "Ref": "KeyPair"
                },
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#cloud-config",
                                "\n",
                                "hostname: login1",
                                "\n",
                                "fqdn: login1.",
                                { "Ref": "ClusterName" },
                                ".alces.network",
                                "\n",
                                "write_files:",
                                "\n",
                                "- content: |",
                                "\n",
                                "    cluster:",
                                "\n",
                                "      uuid: '11111111-2222-3333-444444444444'",
                                "\n",
                                "      token: '1A0a1aaAA1aAAA/aaa1aAA=='",
                                "\n",
                                "      name: ",
                                {
                                    "Ref": "ClusterName"
                                },
                                "\n",
                                "      role: 'master'",
                                "\n",
                                "      tags:",
                                "\n",
                                "        galaxy_roles: ':master:'",
                                "\n",
                                "  owner: root:root",
                                "\n",
                                "  path: /opt/clusterware/etc/config.yml",
                                "\n",
                                "  permissions: '0640'",
                                "\n"
                              ]
                          ]
                      }
                  }
              }
          },
          "ComputeConfig": {
              "Type": "AWS::AutoScaling::LaunchConfiguration",
              "Properties": {
                  "AssociatePublicIpAddress": false,
                  "KeyName": { "Ref": "KeyPair" },
                  "ImageId": {
                      "Fn::FindInMap": [
                          "AWSRegionArch2AMI",
                          { "Ref": "AWS::Region" },
                          "centos7"
                      ]
                  },
                  "InstanceType": {
                      "Fn::FindInMap": [
                          "InstanceType2Flavour",
                          { "Ref": "InstanceFlavour" },
                          "instanceflavour"
                      ]
                  },
                  "SecurityGroups": [ { "Ref": "AlcesClusterwareSecurityGroup" } ],
                  "UserData": {
                      "Fn::Base64": {
                          "Fn::Join": [
                              "",
                              [
                                "#cloud-config",
                                "\n",
                                "write_files:","\n",
                                "- content: |",
                                "\n",
                                "    cluster:",
                                "\n",
                                "      uuid: '11111111-2222-3333-444444444444'",
                                "\n",
                                "      token: '1A0a1aaAA1aAAA/aaa1aAA=='",
                                "\n",
                                "      name: ",
                                { "Ref": "ClusterName" },
                                "\n",
                                "      role: 'slave'",
                                "\n",
                                "      master: ",
                                { "Fn::GetAtt": [ "GalaxyInstance", "PrivateIp" ] },
                                "\n",
                                "      tags:",
                                "\n",
                                "        scheduler_roles: ':compute:'",
                                "\n",
                                "      quorum: 3",
                                "\n",
                                "  owner: root:root",
                                "\n",
                                "  path: /opt/clusterware/etc/config.yml",
                                "\n",
                                "  permissions: '0640'",
                                "\n"
                              ]
                          ]
                      }
                  }
              }
          },
          "ComputeGroup": {
              "Type": "AWS::AutoScaling::AutoScalingGroup",
              "DependsOn": "GalaxyInstance",
              "Properties": {
                  "DesiredCapacity": {
                      "Ref": "ComputeNumber"
                  },
                  "LaunchConfigurationName": {
                      "Ref": "ComputeConfig"
                  },
                  "MinSize": "1",
                  "MaxSize": {
                      "Ref": "ComputeNumber"
                  },
                  "VPCZoneIdentifier": [
                      {
                          "Ref": "ClusterwarePublicNet"
                      }
                  ]
              }
            }
          },
          "Outputs": {
              "AccessIP": {
                  "Value": {
                      "Fn::GetAtt": [
                          "GalaxyInstance",
                          "PublicIp"
                      ]
                  },
                  "Description": "Access the instance via the displayed IP address and username with public key provided"
              },
              "ClusterUser": {
                  "Value": "alces",
                  "Description": "Cluster administrator username, access with user SSH key provided"
              }
          }
  }
