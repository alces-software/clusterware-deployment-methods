{
    "Description": "Launch an Alces Clusterware environment with 1 login node and 5 compute nodes, SGE scheduler and EBS-backed storage volume. Stack includes all necessary networking components to host an Alces Clusterware environment.",
    "Parameters": {
        "ClusterName": {
            "Description": "Choose a cluster name",
            "Type": "String",
	    "AllowedPattern": "[a-z0-9]*",
            "Default": "awscluster"
        },
        "ClusterUUID": {
            "Description": "Enter a unique cluster UUID - or leave default",
            "Type": "String",
            "AllowedPattern": "[a-z0-9]{8}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{12}",
            "Default": "11111111-2222-3333-4444-555555555555",
            "ConstraintDescription": "Please specify a valid UUID"
        },
        "ClusterwareToken": {
            "Description": "Enter a Clusterware token - or leave default if unknown",
            "Type": "String",
	    "MinLength": "24",
	    "MaxLength": "24",
            "Default": "1A0a1aaAA1aAAA/aaa1aAA=="
        },
        "ClusterUser": {
            "Description": "Choose a username for the cluster user",
            "Type": "String",
	    "MinLength": "3",
	    "MaxLength": "16",
	    "AllowedPattern": "[-a-z0-9]*",
            "Default": "alces-cluster",
	    "ConstraintDescription": "Username can only contain alphanumeric characters and dashes"
        },
        "ClusterUserKey": {
            "Description": "Enter a public SSH key for cluster user access",
            "Type": "String",
            "Default": "ssh-rsa  clouduser"
        },
        "MasterNodeType": {
            "Description": "Select the Clusterware master node instance flavour",
            "Type": "String",
            "Default": "t2.small",
            "AllowedValues": [
                "t2.micro",
                "t2.small",
                "t2.large"
            ]
        },
        "AdminKey": {
            "Description": "Choose an existing AWS key for administrator access",
            "Type": "AWS::EC2::KeyPair::KeyName"
        },
        "ComputeType": {
            "Description": "Select the Clusterware compute node instance flavour",
            "Type": "String",
            "Default": "t2.small",
            "AllowedValues": [
                "t2.micro",
                "t2.small",
                "t2.large",
		"c4.large",
		"c4.xlarge",
		"r3.large",
		"r3.xlarge"
            ]
        },
        "ClusterwareDepots": {
            "Description": "Select the Clusterware Depot to install",
            "Type": "String",
            "Default": "benchmark",
            "AllowedValues": [
                "benchmark",
                "chemistry",
                "bio"
            ]
        },
        "VolumeSize": {
            "Description": "Enter a volume size for the shared scratch volume",
            "Type": "String",
            "Default": "50"
        },
        "NetworkCIDR": {
            "Description": "Enter an address range that is permitted to access the Clusterware master node. Leave blank if unknown",
            "Type": "String",
            "Default": "0.0.0.0/0",
            "AllowedPattern": "[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}/[0-9]{1,2}",
            "ConstraintDescription": "Please specify a valid IP range, e.g. 101.21.2.0/16"
        }
    },
    "Mappings": {
        "AWSInstanceType2Arch": {
            "t2.micro": {
                "Arch": "64"
            },
            "t2.small": {
                "Arch": "64"
            },
            "t2.large": {
                "Arch": "64"
            },
	    "c4.large": {
		"Arch": "64"
	    },
	    "c4.xlarge": {
		"Arch": "64"
	    },
	    "r3.large": {
		"Arch": "64"
	    },
	    "r3.xlarge": {
		"Arch": "64"
	    }
        },
        "AWSRegionArch2AMI": {
            "eu-west-1": {
                "64": "ami-014fe272"
            },
	    "eu-central-1": {
		    "64": "ami-f2fce09e"
	    },
	    "us-west-1": {
		    "64": "ami-ca5b30aa"
	    }
        }
    },
    "Resources": {
        "DataVolume": {
            "Type": "AWS::EC2::Volume",
            "Properties": {
                "Size": { "Ref": "VolumeSize" },
                "AvailabilityZone": { "Fn::GetAtt": [ "AlcesClusterwareMasterNode", "AvailabilityZone" ] }
          }
        },  
        "ClusterwareVPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": "10.75.0.0/16",
                "EnableDnsSupport": "true",
                "EnableDnsHostnames": "true"
            }
        },
        "ClusterwarePublicNet": {
            "Type": "AWS::EC2::Subnet",
            "DependsOn": "ClusterwareVPC",
            "Properties": {
                "VpcId": {
                    "Ref": "ClusterwareVPC"
                },
                "CidrBlock": "10.75.0.0/24"
            }
        },
        "ClusterwareGateway": {
            "Type": "AWS::EC2::InternetGateway",
            "DependsOn": "ClusterwareVPC"
        },
        "ClusterwareAttachGW": {
            "Type": "AWS::EC2::VPCGatewayAttachment",
            "DependsOn": "ClusterwareGateway",
            "Properties": {
                "VpcId": {
                    "Ref": "ClusterwareVPC"
                },
                "InternetGatewayId": {
                    "Ref": "ClusterwareGateway"
                }
            }
        },
        "ClusterwareRouteTable": {
            "Type": "AWS::EC2::RouteTable",
            "DependsOn": "ClusterwareVPC",
            "Properties": {
                "VpcId": {
                    "Ref": "ClusterwareVPC"
                }
            }
        },
        "ClusterwareRoute": {
            "Type": "AWS::EC2::Route",
            "DependsOn": "ClusterwareAttachGW",
            "Properties": {
                "RouteTableId": {
                    "Ref": "ClusterwareRouteTable"
                },
                "DestinationCidrBlock": "0.0.0.0/0",
                "GatewayId": {
                    "Ref": "ClusterwareGateway"
                }
            }
        },
        "ClusterwareNetACL": {
            "Type": "AWS::EC2::NetworkAcl",
            "DependsOn": "ClusterwareVPC",
            "Properties": {
                "VpcId": {
                    "Ref": "ClusterwareVPC"
                }
            }
        },
        "InboundSSHACLEntry": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "ClusterwareNetACL"
                },
                "RuleNumber": "100",
                "Protocol": "-1",
                "RuleAction": "allow",
                "Egress": "false",
                "CidrBlock": {
                    "Ref": "NetworkCIDR"
                },
                "PortRange": {
                    "From": "1",
                    "To": "65535"
                }
            }
        },
        "OutboundACLEntry": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "ClusterwareNetACL"
                },
                "RuleNumber": "101",
                "Protocol": "-1",
                "RuleAction": "allow",
                "Egress": "true",
                "CidrBlock": "0.0.0.0/0",
                "PortRange": {
                    "From": "1",
                    "To": "65535"
                }
            }
        },
        "ClusterwareSubnetLink": {
            "Type": "AWS::EC2::SubnetNetworkAclAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "ClusterwarePublicNet"
                },
                "NetworkAclId": {
                    "Ref": "ClusterwareNetACL"
                }
            }
        },
        "SubnetToRouteTable": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "RouteTableId": {
                    "Ref": "ClusterwareRouteTable"
                },
                "SubnetId": {
                    "Ref": "ClusterwarePublicNet"
                }
            }
        },
        "AlcesClusterwareSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "DependsOn": "ClusterwareVPC",
            "Properties": {
                "GroupDescription": "Enable SSH access to the Alces Clusterware master node",
                "VpcId": {
                    "Ref": "ClusterwareVPC"
                },
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "22",
                        "ToPort": "22",
                        "CidrIp": {
                            "Ref": "NetworkCIDR"
                        }
                    },
                    {
                        "IpProtocol": "-1",
                        "FromPort": "0",
                        "ToPort": "65535",
                        "CidrIp": {
                            "Ref": "NetworkCIDR"
                        }
                    }
                ],
                "SecurityGroupEgress": [
                    {
                        "IpProtocol": "-1",
                        "FromPort": "0",
                        "ToPort": "65535",
                        "CidrIp": "0.0.0.0/0"
                    }
                ]
            }
        },
        "AlcesClusterwareMasterNode": {
            "Type": "AWS::EC2::Instance",
            "DependsOn": "AlcesClusterwareSecurityGroup",
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Alces Clusterware Master"
                    }
                ],
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSRegionArch2AMI",
                        {
                            "Ref": "AWS::Region"
                        },
                        {
                            "Fn::FindInMap": [
                                "AWSInstanceType2Arch",
                                {
                                    "Ref": "MasterNodeType"
                                },
                                "Arch"
                            ]
                        }
                    ]
                },
                "NetworkInterfaces": [
                    {
                        "AssociatePublicIpAddress": "true",
                        "DeviceIndex": "0",
                        "GroupSet": [
                            {
                                "Ref": "AlcesClusterwareSecurityGroup"
                            }
                        ],
                        "SubnetId": {
                            "Ref": "ClusterwarePublicNet"
                        }
                    }
                ],
                "InstanceType": {
                    "Ref": "MasterNodeType"
                },
                "KeyName": {
                    "Ref": "AdminKey"
                },
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#cloud-config",
                                "\n",
                                "hostname: login1",
                                "\n",
                                "fqdn: login1.",
                                {
                                    "Ref": "ClusterName"
                                },
                                ".alces.network",
                                "\n",
                                "write_files:",
                                "\n",
                                "- content: |",
                                "\n",
                                "    #!/bin/bash",
                                "\n",
                                "    mkfs.ext4 /dev/xvdh",
                                "\n",
                                "    mkdir -p /data",
                                "\n",
                                "    mount /dev/xvdh /data",
                                "\n",
                                "    echo \"/dev/xvdh /data ext4 defaults,nofail 0 2\" >> /etc/fstab",
                                "\n",
                                "    echo \"/data 10.75.0.0/16(rw,no_root_squash,no_subtree_check,sync)\" >> /etc/exports", 
                                "\n",
                                "  path: /tmp/ebsconfig.sh",
                                "\n",
                                "  permissions: '0755'",
                                "\n",
                                "- content: |",
                                "\n",
                                "    cluster:",
                                "\n",
                                "      uuid: '",
                                {
                                    "Ref": "ClusterUUID"
                                },
                                "'",
                                "\n",
                                "      token: '",
                                {
                                    "Ref": "ClusterwareToken"
                                },
                                "'",
                                "\n",
                                "      name: ",
                                {
                                    "Ref": "ClusterName"
                                },
                                "\n",
                                "      role: 'master'",
                                "\n",
                                "      tags:",
                                "\n",
                                "        scheduler_roles: ':master:'",
                                "\n",
                                "      quorum: 3",
                                "\n",
                                "      gridware:",
                                "\n",
                                "        depots:",
                                "\n",
                                "        - name: ",
                                {
                                    "Ref": "ClusterwareDepots"
                                },
                                "\n",
                                "          url: https://s3-eu-west-1.amazonaws.com/packages.alces-software.com/depots/",
                                {
                                    "Ref": "ClusterwareDepots"
                                },
                                "\n",
                                "      aws_zone_name: ",
                                {
                                    "Ref": "ClusterName"
                                },
                                "\n",
                                "    instance:",
                                "\n",
                                "      users:",
                                "\n",
                                "      - username: ",
                                {
                                    "Ref": "ClusterUser"
                                },
                                "\n",
                                "        uid: 509",
                                "\n",
                                "        group: ",
                                {
                                    "Ref": "ClusterUser"
                                },
                                "\n",
                                "        gid: 509",
                                "\n",
                                "        groups:",
                                "\n",
                                "          - gridware",
                                "\n",
                                "          - admins:388",
                                "\n",
                                "        ssh_public_key: |",
                                "\n",
                                "          ",
                                {
                                    "Ref": "ClusterUserKey"
                                },
                                "\n",
                                "  owner: root:root",
                                "\n",
                                "  path: /opt/clusterware/etc/config.yml",
                                "\n",
                                "  permissions: '0640'",
                                "\n",
                                "runcmd:",
                                "\n",
                                " - [ sh, /tmp/ebsconfig.sh ]"
                            ]
                        ]
                    }
                }
            }
        },
        "DataVolAttach": {
            "Type": "AWS::EC2::VolumeAttachment",
            "Properties": {
                "InstanceId": { "Ref": "AlcesClusterwareMasterNode" },
                "VolumeId": { "Ref": "DataVolume" },
                "Device": "/dev/xvdh"
            }
        },
        "AlcesClusterwareCompute1": {
            "Type": "AWS::EC2::Instance",
