{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Launch an NFS server to your existing environment",
    "Parameters": {
        "SUBNETID": {
            "Description": "Subnet ID",
            "Type": "AWS::EC2::Subnet::Id"
        },
        "SECURITYGROUP": {
            "Description": "Security Group ID",
            "Type": "AWS::EC2::SecurityGroup::Id"
        },
        "CLUSTERNAME": {
            "Description": "Cluster name",
            "Type": "String"
        },
        "LOGINIP": {
            "Description": "Environment login node internal IP",
            "Type": "String"
        },
        "STORAGETYPE": {
            "Description": "Select the type of storage server to deploy. This defines the number of cores and memory available - affecting the read/write performance of your storage",
            "Type": "String",
            "Default": "Medium",
            "AllowedValues": [
                "Small",
                "Medium",
                "Large"
            ]
        },
        "USERNAME": {
            "Description": "Enter the name of your environments cluster administrator user",
            "Type": "String",
            "Default": "alces"
        },
        "PLACEMENTGROUP": {
            "Description": "Enter the name of your existing clusters placement group - if your cluster is not part of one, select None",
            "Type": "String",
            "Default": "None"
        },
        "STORAGESIZE": {
            "Description": "NFS server storage size in GB",
            "Type": "Number",
            "Default": "5000",
            "MaxValue": "16000",
            "MinValue": "1"
        },
        "PIOPS": {
            "Description": "Choose whether to provision your shared storage with Provisioned IOPS",
            "Type": "String",
            "Default": "No",
            "AllowedValues": [
                "Yes",
                "No"
            ]
        },
        "KEYPAIR": {
            "Description": "Administrator keypair",
            "Type": "AWS::EC2::KeyPair::KeyName"
        }
    },
    "Mappings": {
        "StorageTypeFlavour": {
            "Small": {
                "instanceflavour": "t2.large"
            },
            "Medium": {
                "instanceflavour": "c4.xlarge"
            },
            "Large": {
                "instanceflavour": "c4.4xlarge"
            }
        }
    },
    "Conditions": {
      "UsePIOPS" : {
        "Fn::Equals" : [
          {
            "Ref" : "PIOPS"
          },
          "Yes"
        ]
      },
      "NoPIOPS": {
        "Fn::Equals": [
          {
            "Ref": "PIOPS"
          },
          "No"
        ]
      },
      "UsePlacementGroup": {
        "Fn::Equals": [
          {
            "Ref": "PLACEMENTGROUP"
          },
          "None"
        ]
      }
    },
    "Resources": {
        "NFS": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ],
                "ImageId": "ami-0b28ae78",
                "NetworkInterfaces": [
                    {
                        "AssociatePublicIpAddress": "True",
                        "DeviceIndex": "0",
                        "GroupSet": [
                            {
                                "Ref": "SECURITYGROUP"
                            }
                        ],
                        "SubnetId": {
                            "Ref": "SUBNETID"
                        }
                    }
                ],
                "BlockDeviceMappings": [
                    {
                        "DeviceName": "/dev/sda1",
                        "Ebs": {
                            "VolumeSize": "100"
                        }
                    }
                ],
                "PlacementGroupName": {
                  "Fn::If": [
                    "UsePlacementGroup",
                    {
                        "Ref": "AWS::NoValue"
                    },
                    {
                        "Ref": "PLACEMENTGROUP"
                    }
                  ]
                },
                "InstanceType": {
                    "Fn::FindInMap": [
                        "StorageTypeFlavour",
                        {
                            "Ref": "STORAGETYPE"
                        },
                        "instanceflavour"
                    ]
                },
                "KeyName": {
                    "Ref": "KEYPAIR"
                },
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#cloud-config",
                                "\n",
                                "system_info:",
                                "\n",
                                "  default_user:",
                                "\n",
                                "    name: ",
                                {
                                  "Ref": "USERNAME"
                                },
                                "\n",
                                "hostname: storage1",
                                "\n",
                                "write_files:",
                                "\n",
                                "- content: |",
                                "\n",
                                "    cluster:",
                                "\n",
                                "      uuid: '11111111-2222-3333-444444444444'",
                                "\n",
                                "      token: '1A0a1aaAA1aAAA/aaa1aAA=='",
                                "\n",
                                "      name: ",
                                {
                                    "Ref": "CLUSTERNAME"
                                },
                                "\n",
                                "      role: 'slave'",
                                "\n",
                                "      master: ",
                                {
                                    "Ref": "LOGINIP"
                                },
                                "\n",
                                "  owner: root:root",
                                "\n",
                                "  path: /opt/clusterware/etc/config.yml",
                                "\n",
                                "  permissions: '0640'",
                                "\n"
                            ]
                        ]
                    }
                }
            }
        },
        "StoragePIOPS": {
            "Type": "AWS::EC2::Volume",
            "DependsOn": "NFS",
            "Properties": {
                "AvailabilityZone": { "Fn::GetAtt": [ "NFS", "AvailabilityZone" ] },
                "VolumeType": "io1",
                "Size": {
                  "Ref": "STORAGESIZE"
                },
                "Iops": "5000",
                "Tags": [
                  {
                    "Key": "Name",
                    "Value": {
                      "Ref": "AWS::StackName"
                    }
                  }
                ]
            },
            "Condition": "UsePIOPS"
        },
        "AttachStoragePIOPS": {
            "Type": "AWS::EC2::VolumeAttachment",
            "DependsOn": "StoragePIOPS",
            "Properties": {
              "Device": "/dev/sdb",
              "InstanceId": {
                "Ref": "NFS"
              },
              "VolumeId": {
                "Ref": "StoragePIOPS"
              }
            },
            "Condition": "UsePIOPS"
        },
        "StorageStandard": {
            "Type": "AWS::EC2::Volume",
            "DependsOn": "NFS",
            "Properties": {
                "AvailabilityZone": { "Fn::GetAtt": [ "NFS", "AvailabilityZone" ] },
                "VolumeType": "gp2",
                "Size": {
                  "Ref": "STORAGESIZE"
                },
                "Tags": [
                  {
                    "Key": "Name",
                    "Value": {
                      "Ref": "AWS::StackName"
                    }
                  }
                ]
            },
            "Condition": "NoPIOPS"
        },
        "AttachStorageStandard": {
            "Type": "AWS::EC2::VolumeAttachment",
            "DependsOn": "StorageStandard",
            "Properties": {
              "Device": "/dev/sdb",
              "InstanceId": {
                "Ref": "NFS"
              },
              "VolumeId": {
                "Ref": "StorageStandard"
              }
            },
            "Condition": "NoPIOPS"
        }
    },
    "Outputs": {
        "AccessIP": {
            "Value": {
                "Fn::GetAtt": [
                    "NFS",
                    "PublicIp"
                ]
            }
        }
    }
}
