{
	"AWSTemplateFormatVersion": "2010-09-09",

	"Description": "Launch an Alces network for use with Alces compute environments",
	"Resources": {
		"ClusterVPC": {
			"Type": "AWS::EC2::VPC",
			"Properties": {
				"Tags": [{
					"Key": "Name",
					"Value": {
						"Ref": "AWS::StackName"
					}
				}],
				"CidrBlock": "10.75.0.0/16",
				"EnableDnsSupport": "true",
				"EnableDnsHostnames": "true"
			}
		},
		"RouteTable": {
			"Type": "AWS::EC2::RouteTable",
			"DependsOn": "ClusterVPC",
			"Properties": {
				"VpcId": {
					"Ref": "ClusterVPC"
				},
				"Tags": [{
					"Key": "Application",
					"Value": {
						"Ref": "AWS::StackId"
					}
				}]
			}
		},
		"ClusterSubnet": {
			"Type": "AWS::EC2::Subnet",
			"Properties": {
				"VpcId": {
					"Ref": "ClusterVPC"
				},
				"CidrBlock": "10.75.0.0/24"
			}
		},
		"ClusterGateway": {
			"Type": "AWS::EC2::InternetGateway",
			"DependsOn": "ClusterVPC"
		},
		"ClusterAttachGW": {
			"Type": "AWS::EC2::VPCGatewayAttachment",
			"DependsOn": "ClusterVPC",
			"Properties": {
				"VpcId": {
					"Ref": "ClusterVPC"
				},
				"InternetGatewayId": {
					"Ref": "ClusterGateway"
				}
			}
		},
		"ClusterRoute": {
			"Type": "AWS::EC2::Route",
			"DependsOn": "ClusterAttachGW",
			"Properties": {
				"RouteTableId": {
					"Ref": "RouteTable"
				},
				"DestinationCidrBlock": "0.0.0.0/0",
				"GatewayId": {
					"Ref": "ClusterGateway"
				}
			}
		},
		"SubnetToRouteTable": {
			"Type": "AWS::EC2::SubnetRouteTableAssociation",
			"DependsOn": "RouteTable",
			"Properties": {
				"SubnetId": {
					"Ref": "ClusterSubnet"
				},
				"RouteTableId": {
					"Ref": "RouteTable"
				}
			}
		},
		"ClusterNetACL": {
			"Type": "AWS::EC2::NetworkAcl",
			"Properties": {
				"VpcId": {
					"Ref": "ClusterVPC"
				}
			}
		},
        "InboundSSHACLEntry": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "ClusterwareNetACL"
                },
                "RuleNumber": "120",
                "Protocol": "6",
                "RuleAction": "allow",
                "Egress": "false",
                "CidrBlock": {
                    "Ref": "NetworkCIDR"
                },
                "PortRange": {
                    "From": "22",
                    "To": "22"
                }
            }
        },
        "InboundHTTPACLEntry": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "ClusterwareNetACL"
                },
                "RuleNumber": "100",
                "Protocol": "6",
                "RuleAction": "allow",
                "Egress": "false",
                "CidrBlock": "0.0.0.0/0",
                "PortRange": {
                    "From": "80",
                    "To": "80"
                }
            }
        },
        "InboundHTTPSACLEntry": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "ClusterwareNetACL"
                },
                "RuleNumber": "110",
                "Protocol": "6",
                "RuleAction": "allow",
                "Egress": "false",
                "CidrBlock": "0.0.0.0/0",
                "PortRange": {
                    "From": "443",
                    "To": "443"
                }
            }
        },
        "InboundTCPACLEntry": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "ClusterwareNetACL"
                },
                "RuleNumber": "200",
                "Protocol": "6",
                "RuleAction": "allow",
                "Egress": "false",
                "CidrBlock": "0.0.0.0/0",
                "PortRange": {
                    "From": "1",
                    "To": "65535"
                }
            }
        },
        "InboundICMPACLEntry": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "ClusterwareNetACL"
                },
                "RuleNumber": "210",
                "Protocol": "1",
                "RuleAction": "allow",
                "Egress": "false",
                "CidrBlock": "0.0.0.0/0",
                "PortRange": {
                    "From": "1",
                    "To": "65535"
                }
            }
        },
		"OutboundACLEntry": {
			"Type": "AWS::EC2::NetworkAclEntry",
			"Properties": {
				"NetworkAclId": {
					"Ref": "ClusterNetACL"
				},
				"RuleNumber": "101",
				"Protocol": "-1",
				"RuleAction": "allow",
				"Egress": "true",
				"CidrBlock": "0.0.0.0/0",
				"PortRange": {
					"From": "1",
					"To": "65535"
				}
			}
		},
		"ClusterSubnetLink": {
			"Type": "AWS::EC2::SubnetNetworkAclAssociation",
			"Properties": {
				"SubnetId": {
					"Ref": "ClusterSubnet"
				},
				"NetworkAclId": {
					"Ref": "ClusterNetACL"
				}
			}
		},
		"ClusterSecurityGroup": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"Tags": [{
					"Key": "Name",
					"Value": {
						"Ref": "AWS::StackName"
					}
				}],
				"GroupDescription": "Open communication between cluster hosts",
				"VpcId": {
					"Ref": "ClusterVPC"
				},
				"SecurityGroupIngress": [{
				{
					"IpProtocol": "-1",
					"FromPort": "0",
					"ToPort": "65535",
					"CidrIp": "10.75.0.0/24"
				},
			{
					"IpProtocol": "6",
					"FromPort": "22",
					"ToPort": "22",
					"CidrIp": { "Ref": "NetworkCIDR" }
			}
			],
				"SecurityGroupEgress": [{
					"IpProtocol": "-1",
					"FromPort": "0",
					"ToPort": "65535",
					"CidrIp": "0.0.0.0/0"
				}]
			}
		}
	},
	"Outputs": {
		"VPCID": {
			"Value": {
				"Ref": "ClusterVPC"
			}
		},
		"GATEWAYID": {
			"Value": {
				"Ref": "ClusterGateway"
			}
		},
		"ROUTETABLEID": {
			"Value": {
				"Ref": "RouteTable"
			}
		},
		"SUBNETID": {
			"Value": {
				"Ref": "ClusterSubnet"
			}
		},
		"NETWORKACL": {
			"Value": {
				"Ref": "ClusterNetACL"
			}
		},
		"SECURITYGROUP": {
			"Value": {
				"Ref": "ClusterSecurityGroup"
			}
		}
	}
}
