{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "Launch an Alces network for use with Alces compute environments",
	"Parameters": {
		"VPCID": {
			"Description": "VPC ID",
			"Type": "String"
		},
		"GATEWAYID": {
			"Description": "Gateway ID",
			"Type": "String"
		},
		"ROUTETABLEID": {
			"Description": "Route Table ID",
			"Type": "String"
		},
		"SUBNETID": {
			"Description": "Subnet ID",
			"Type": "String"
		},
		"NETWORKACL": {
			"Description": "Network ACL",
			"Type": "String"
		},
		"SECURITYGROUP": {
			"Description": "Security Group ID",
			"Type": "String"
		},
		"CLUSTERNAME": {
			"Description": "Cluster name",
			"Type": "String"
		},
		"KEYPAIR": {
			"Description": "Cluster name",
			"Type": "String"
		},
		"NODENAME": {
			"Description": "Login node hostname",
			"Type": "String"
		},
		"LOGINTYPE": {
			"Description": "Login node instance type",
			"Type": "String"
		}
	},
	"Resources": {
		"Login": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"Tags": [{
					"Key": "Name",
					"Value": { "Ref": "AWS::StackName" }
				}],
				"ImageId": "ami-556cd226",
				"NetworkInterfaces": [{
					"AssociatePublicIpAddress": "True",
					"DeviceIndex": "0",
					"GroupSet": [{
						"Ref": "SECURITYGROUP"
					}],
					"SubnetId": {
						"Ref": "SUBNETID"
					}
				}],
				"InstanceType": {
					"Ref": "LOGINTYPE"
				},
				"KeyName": {
					"Ref": "KEYPAIR"
				},
				"UserData": {
					"Fn::Base64": {
						"Fn::Join": [
							"", [
								"#cloud-config",
								"\n",
								"hostname: login1",
                                                                "\n",
                                                                "fqdn: ", {
                                                                "Ref": "NODENAME"
                                                                },
                                                                ".", {
                                                                "Ref": "CLUSTERNAME"
                                                                },
                                                                ".alces.network",
                                                                "\n",
								"write_files:",
								"\n",
								"- content: |",
								"\n",
								"    cluster:",
								"\n",
								"      uuid: '11111111-2222-3333-444444444444'",
								"\n",
								"      token: '1A0a1aaAA1aAAA/aaa1aAA=='",
								"\n",
								"      name: ", {
									"Ref": "CLUSTERNAME"
								},
								"\n",
								"      role: 'master'",
								"\n",
								"      tags:",
								"\n",
								"        scheduler_roles: ':master:'",
								"\n",
								"  owner: root:root",
								"\n",
								"  path: /opt/clusterware/etc/config.yml",
								"\n",
								"  permissions: '0640'",
								"\n"
							]
						]
					}
				}
			}
		}
	},
	"Outputs": {
		"AccessIP": {
			"Value": {
				"Fn::GetAtt": [
					"Login",
					"PublicIp"
				]
			}
		},
		"InternalIP": {
			"Value": {
				"Fn::GetAtt": [
					"Login",
					"PrivateIp"
				]
			}
		}
	}
}
