{
    "Description": "Launch an Alces ClusterWare environment with a single SGE master node together with compute nodes using EC2 spot pricing.",
    "Parameters": {
        "ClusterName": {
            "Description": "Choose a cluster name",
            "Type": "String",
            "AllowedPattern": "[a-z0-9]*",
            "Default": "awscluster"
        },
        "ClusterUUID": {
            "Description": "Enter a unique cluster UUID - or leave default",
            "Type": "String",
            "AllowedPattern": "[a-z0-9]{8}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{12}",
            "Default": "11111111-2222-3333-444444444444",
            "ConstraintDescription": "Please specify a valid UUID"
        },
        "ClusterwareToken": {
            "Description": "Enter a Clusterware token - or leave default if unknown",
            "Type": "String",
            "MinLength": "24",
            "MaxLength": "24",
            "Default": "1A0a1aaAA1aAAA/aaa1aAA=="
        },
        "ClusterUser": {
            "Description": "Choose a username for the cluster user",
            "Type": "String",
            "MinLength": "3",
            "MaxLength": "16",
            "AllowedPattern": "[-a-z0-9]*",
            "Default": "alces-cluster",
            "ConstraintDescription": "Username can only contain alphanumeric characters and dashes"
        },
        "ClusterUserKey": {
            "Description": "Enter a public SSH key for cluster user access",
            "Type": "String",
            "Default": "ssh-rsa  clouduser"
        },
        "AdminKey": {
            "Description": "Choose an existing AWS key for administrator access",
            "Type": "AWS::EC2::KeyPair::KeyName"
        },
        "ComputeNumber": {
            "Description": "Enter the number of compute nodes you wish to deploy",
            "Type": "String",
            "AllowedPattern": "[0-9]",
            "Default": "3"
        },
        "InstanceFlavour": {
            "Description": "Select the Clusterware compute node instance flavour",
            "Type": "String",
            "Default": "Medium-4.cores-15gb",
            "AllowedValues": [
                "XSmall-1.core-3.75gb",
                "Small-2.cores-15.25gb",
                "Medium-4.cores-15gb",
                "Large-8.cores-61gb",
                "XLarge-16.cores-122gb"
            ]
        },
	"SpotPrice": {
	    "Description": "Enter your maximum bid per hour for each compute instance. View the Spot Request calculator for information on spot pricing.",
	    "Type": "String",
	    "Default": "0.15"
	},
        "ClusterwareDepots": {
            "Description": "Select the Clusterware Depot to install",
            "Type": "String",
            "Default": "benchmark",
            "AllowedValues": [
                "benchmark",
                "chemistry",
                "bio"
            ]
        },
        "NetworkCIDR": {
            "Description": "Enter an address range that is permitted to access the Clusterware master node. Leave blank if unknown",
            "Type": "String",
            "Default": "0.0.0.0/0",
            "AllowedPattern": "[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}/[0-9]{1,2}",
            "ConstraintDescription": "Please specify a valid IP range, e.g. 101.21.2.0/16"
        }
    },
    "Mappings": {
        "InstanceType2Flavour": {
            "XSmall-1.core-3.75gb": {
                "instanceflavour": "m4.medium"
            },
            "Small-2.cores-15.25gb": {
                "instanceflavour": "r3.large"
            },
            "Medium-4.cores-15gb": {
                "instanceflavour": "m4.xlarge"
            },
            "Large-8.cores-61gb": {
                "instanceflavour": "r3.2xlarge"
            },
            "XLarge-16.cores-122gb": {
                "instanceflavour": "r3.4xlarge"
            }
        },
        "AWSRegionArch2AMI": {
            "eu-west-1": {
                "centos7": "ami-e460ce97"
            },
            "eu-central-1": {
                    "centos7": "ami-e460ce97"
            },
            "us-west-1": {
                    "centos7": "ami-ca5b30aa"
            }
        }
    },
    "Resources": {
        "ClusterwareVPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": { "Ref": "ClusterName" } 
                    }
                ],
                "CidrBlock": "10.75.0.0/16",
                "EnableDnsSupport": "true",
                "EnableDnsHostnames": "true"
            }
        },
        "ClusterwarePublicNet": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {
                    "Ref": "ClusterwareVPC"
                },
                "CidrBlock": "10.75.0.0/24"
            }
        },
        "ClusterwareGateway": {
            "Type": "AWS::EC2::InternetGateway",
            "DependsOn": "ClusterwareVPC"
        },
        "ClusterwareAttachGW": {
            "Type": "AWS::EC2::VPCGatewayAttachment",
            "DependsOn": "ClusterwareGateway",
            "Properties": {
                "VpcId": {
                    "Ref": "ClusterwareVPC"
                },
                "InternetGatewayId": {
                    "Ref": "ClusterwareGateway"
                }
            }
        },
        "ClusterwareRouteTable": {
            "Type": "AWS::EC2::RouteTable",
            "DependsOn": "ClusterwareVPC",
            "Properties": {
                "VpcId": {
                    "Ref": "ClusterwareVPC"
                }
            }
        },
        "ClusterwareRoute": {
            "Type": "AWS::EC2::Route",
            "DependsOn": "ClusterwareAttachGW",
            "Properties": {
                "RouteTableId": {
                    "Ref": "ClusterwareRouteTable"
                },
                "DestinationCidrBlock": "0.0.0.0/0",
                "GatewayId": {
                    "Ref": "ClusterwareGateway"
                }
            }
        },
        "ClusterwareNetACL": {
            "Type": "AWS::EC2::NetworkAcl",
            "Properties": {
                "VpcId": {
                    "Ref": "ClusterwareVPC"
                }
            }
        },
        "InboundSSHACLEntry": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "ClusterwareNetACL"
                },
                "RuleNumber": "100",
                "Protocol": "-1",
                "RuleAction": "allow",
                "Egress": "false",
                "CidrBlock": {
                    "Ref": "NetworkCIDR"
                },
                "PortRange": {
                    "From": "1",
                    "To": "65535"
                }
            }
        },
        "OutboundACLEntry": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "ClusterwareNetACL"
                },
                "RuleNumber": "101",
                "Protocol": "-1",
                "RuleAction": "allow",
                "Egress": "true",
                "CidrBlock": "0.0.0.0/0",
                "PortRange": {
                    "From": "1",
                    "To": "65535"
                }
            }
        },
        "ClusterwareSubnetLink": {
            "Type": "AWS::EC2::SubnetNetworkAclAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "ClusterwarePublicNet"
                },
                "NetworkAclId": {
                    "Ref": "ClusterwareNetACL"
                }
            }
        },
        "SubnetToRouteTable": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "RouteTableId": {
                    "Ref": "ClusterwareRouteTable"
                },
                "SubnetId": {
                    "Ref": "ClusterwarePublicNet"
                }
            }
        },
        "AlcesClusterwareSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": { "Ref": "ClusterName" } 
                    }
                ],
                "GroupDescription": "Enable SSH access to the Alces Clusterware master node",
                "VpcId": {
                    "Ref": "ClusterwareVPC"
                },
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "22",
                        "ToPort": "22",
                        "CidrIp": {
                            "Ref": "NetworkCIDR"
                        }
                    },
                    {
                        "IpProtocol": "-1",
                        "FromPort": "0",
                        "ToPort": "65535",
                        "CidrIp": {
                            "Ref": "NetworkCIDR"
                        }
                    }
                ],
                "SecurityGroupEgress": [
                    {
                        "IpProtocol": "-1",
                        "FromPort": "0",
                        "ToPort": "65535",
                        "CidrIp": "0.0.0.0/0"
                    }
                ]
            }
        },
        "AlcesClusterwareMasterNode": {
            "Type": "AWS::EC2::Instance",
            "DependsOn": "AlcesClusterwareSecurityGroup",
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Alces Clusterware Master"
                    }
                ],
                "PlacementGroupName": {
                    "Ref": "PlacementGroup"
                },
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSRegionArch2AMI",
                        { "Ref": "AWS::Region" },
                        "centos7"
                    ]
                },
                "NetworkInterfaces": [
                    {
                        "AssociatePublicIpAddress": "True",
                        "DeviceIndex": "0",
                        "GroupSet": [
                            {
                                "Ref": "AlcesClusterwareSecurityGroup"
                            }
                        ],
                        "SubnetId": {
                            "Ref": "ClusterwarePublicNet"
                        }
                    }
                ],
                "InstanceType": {
                    "Fn::FindInMap": [
                        "InstanceType2Flavour",
                        { "Ref": "InstanceFlavour" },
                        "instanceflavour"
                    ]
                },
                "KeyName": {
                    "Ref": "AdminKey"
                },
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#cloud-config",
                                "\n",
                                "hostname: login1",
                                "\n",
                                "fqdn: login1.",
                                {
                                    "Ref": "ClusterName"
                                },
                                ".alces.network",
                                "\n",
                                "write_files:",
                                "\n",
                                "- content: |",
                                "\n",
                                "    cluster:",
                                "\n",
                                "      uuid: '",
                                {
                                    "Ref": "ClusterUUID"
                                },
                                "'",
                                "\n",
                                "      token: '",
                                {
                                    "Ref": "ClusterwareToken"
                                },
                                "'",
                                "\n",
                                "      name: ",
                                {
                                    "Ref": "ClusterName"
                                },
                                "\n",
                                "      role: 'master'",
                                "\n",
                                "      tags:",
                                "\n",
                                "        scheduler_roles: ':master:'",
                                "\n",
                                "      quorum: 3",
                                "\n",
                                "      gridware:",
                                "\n",
                                "        depots:",
                                "\n",
                                "        - name: ",
                                {
                                    "Ref": "ClusterwareDepots"
                                },
                                "\n",
                                "          url: https://s3-eu-west-1.amazonaws.com/packages.alces-software.com/depots/",
                                {
                                    "Ref": "ClusterwareDepots"
                                },
                                "\n",
                                "    instance:",
                                "\n",
                                "      users:",
                                "\n",
                                "      - username: ",
                                {
                                    "Ref": "ClusterUser"
                                },
                                "\n",
                                "        uid: 509",
                                "\n",
                                "        group: ",
                                {
                                    "Ref": "ClusterUser"
                                },
                                "\n",
                                "        gid: 509",
                                "\n",
                                "        groups:",
                                "\n",
                                "          - gridware",
                                "\n",
                                "          - admins:388",
                                "\n",
                                "        ssh_public_key: |",
                                "\n",
                                "          ",
                                {
                                    "Ref": "ClusterUserKey"
                                },
                                "\n",
                                "  owner: root:root",
                                "\n",
                                "  path: /opt/clusterware/etc/config.yml",
                                "\n",
                                "  permissions: '0640'",
                                "\n"
                            ]
                        ]
                    }
                }
            }
        },
        "PlacementGroup": {
            "Type": "AWS::EC2::PlacementGroup",
            "Properties": {
                "Strategy": "cluster"
            }
        },
        "ComputeConfig": {
            "Type": "AWS::AutoScaling::LaunchConfiguration",
            "Properties": {
                "AssociatePublicIpAddress": false,
                "KeyName": { "Ref": "AdminKey" },
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSRegionArch2AMI",
                        { "Ref": "AWS::Region" },
                        "centos7"
                    ]
                },
                "InstanceType": {
                    "Fn::FindInMap": [
                        "InstanceType2Flavour",
                        { "Ref": "InstanceFlavour" },
                        "instanceflavour"
                    ]
                },
		"SpotPrice": {
			"Ref": "SpotPrice"
		},
                "SecurityGroups": [ { "Ref": "AlcesClusterwareSecurityGroup" } ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                              "#cloud-config",
                              "\n",
                              "write_files:","\n",
                              "- content: |",
                              "\n",
                              "    cluster:",
                              "\n",
                              "      uuid: '",
              { "Ref": "ClusterUUID" },
                              "'",
                              "\n",
                              "      token: '",
              { "Ref": "ClusterwareToken" },
                              "'",
                              "\n",
                              "      name: ",
                              { "Ref": "ClusterName" },
                              "\n",
                              "      role: 'slave'",
                              "\n",
                              "      master: ",
                              { "Fn::GetAtt": [ "AlcesClusterwareMasterNode", "PrivateIp" ] },
                              "\n",
                              "      tags:",
                              "\n",
                              "        scheduler_roles: ':compute:'",
                              "\n",
                              "      quorum: 3",
                              "\n",
                              "    instance:",
                              "\n",
                              "      users:",
                              "\n",
                              "      - username: ",
                              {
                                  "Ref": "ClusterUser"
                              },
                              "\n",
                              "        uid: 509",
                              "\n",
                              "        group: ",
                              {
                                  "Ref": "ClusterUser"
                              },
                              "\n",
                              "        gid: 509",
                              "\n",
                              "        groups:",
                              "\n",
                              "          - gridware",
                              "\n",
                              "          - admins:388",
                              "\n",
                              "        ssh_public_key: |",
                              "\n",
                              "          ",
                              {
                                  "Ref": "ClusterUserKey"
                              },
                              "\n",
                              "  owner: root:root",
                              "\n",
                              "  path: /opt/clusterware/etc/config.yml",
                              "\n",
                              "  permissions: '0640'",
                              "\n"
                            ]
                        ]
                    }
                }
            }
        },
        "ComputeGroup": {
            "Type": "AWS::AutoScaling::AutoScalingGroup",
            "DependsOn": "AlcesClusterwareMasterNode",
            "Properties": {
                "DesiredCapacity": {
                    "Ref": "ComputeNumber"
                },
                "PlacementGroup": {
                    "Ref": "PlacementGroup"
                },
                "LaunchConfigurationName": {
                    "Ref": "ComputeConfig"
                },
                "MinSize": "1",
                "MaxSize": {
                    "Ref": "ComputeNumber"
                },
                "VPCZoneIdentifier": [
                    {
                        "Ref": "ClusterwarePublicNet"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "AccessIP": {
            "Value": {
                "Fn::GetAtt": [
                    "AlcesClusterwareMasterNode",
                    "PublicIp"
                ]
            },
            "Description": "Access the cluster via the above IP address and username with public key provided"
        },
        "ClusterUser": {
            "Value": {
                "Ref": "ClusterUser"
            },
            "Description": "Cluster user username, access with user SSH key provided"
        }
    }
}
